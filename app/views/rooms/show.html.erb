<p id="notice"><%= notice %></p>
<!-- <%= turbo_stream_from @room %> Make stream cable to the messages on #messages -->
<%= turbo_frame_tag "room" do %>
  <p><strong>Name:</strong><%= @room.name %></p>
  <p>
    <%= link_to 'Edit', edit_room_path(@room) %>
    <%= link_to 'Back', rooms_path, "data-turbo-frame": "_top" %>
  </p>
<% end %>

<div style="height: 50px;"> <!-- make sure the element not make content messy with static height -->
<%= turbo_frame_tag "new_message", src: new_room_message_path(@room), target: "_top" %>
</div>

<table class="table" id="messages">
  <thead>
    <tr>
      <th scope="col">Content</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
  <%= render @room.messages %>
  </tbody>
</table>
